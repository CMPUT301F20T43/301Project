<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.demo.library"
    android:targetSandboxVersion="2"
    android:versionCode="2"
    android:versionName="2.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="27" />
    <!-- 基础模块START -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- 基础模块 END -->


    <!-- 读取外部存储 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- 相机拍照 -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- 读取日志 -->
    <application
        android:name="com.example.demo.login.MyApplication"
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/my_library"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.demo.login.ui.activity.SigninActivity"
            android:theme="@style/AppTheme.Dark" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.demo.login.ui.activity.SignupActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name="com.example.demo.login.ui.activity.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.demo.login.ui.activity.AddBooksActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.demo.login.ui.activity.OrderBookActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.demo.login.ui.activity.SearchUserActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.demo.login.ui.activity.EditUserActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.demo.login.ui.activity.SearchBookActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <provider
            android:name="cn.bmob.v3.util.BmobContentProvider"
            android:authorities="com.example.demo.library.BmobContentProvider" />
    </application>

</manifest>