<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:background="#edf0f3"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ui.activity.HomeActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_main_menuContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="10" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_bottomMenu_chat"
            style="@style/ButtomMenuItemLayout"
            android:baselineAligned="false">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center"
                tools:ignore="Suspicious0dp">

                <ImageView
                    android:id="@+id/imgv_bottomMenu_home"
                    style="@style/ButtomMenuImgv"
                    android:src="@drawable/ic_menu_chat_selector"
                    android:contentDescription="todo" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                tools:ignore="Suspicious0dp">

                <TextView
                    android:id="@+id/tv_bottomMenu_chat"
                    style="@style/ButtomMenuTv"
                    android:text="Home" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bottomMenu_addressBook"
            style="@style/ButtomMenuItemLayout"
            android:baselineAligned="false">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center"
                tools:ignore="Suspicious0dp">

                <ImageView
                    android:id="@+id/imgv_bottomMenu_addressbook"
                    style="@style/ButtomMenuImgv"
                    android:src="@drawable/ic_menu_addressbook_selector"
                    android:contentDescription="todo" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                tools:ignore="Suspicious0dp">

                <TextView
                    android:id="@+id/tv_bottomMenu_addressbook"
                    style="@style/ButtomMenuTv"
                    android:text="Borrow" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bottomMenu_discovery"
            style="@style/ButtomMenuItemLayout"
            android:baselineAligned="false">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center"
                tools:ignore="Suspicious0dp">

                <ImageView
                    android:id="@+id/imgv_bottomMenu_discovery"
                    style="@style/ButtomMenuImgv"
                    android:src="@drawable/ic_menu_discovery_selector"
                    android:contentDescription="todo" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                tools:ignore="Suspicious0dp">

                <TextView
                    android:id="@+id/tv_bottomMenu_discovery"
                    style="@style/ButtomMenuTv"
                    android:text="Notice" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_bottomMenu_me"
            style="@style/ButtomMenuItemLayout"
            android:baselineAligned="false">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center"
                tools:ignore="Suspicious0dp">

                <ImageView
                    android:id="@+id/imgv_bottomMenu_me"
                    style="@style/ButtomMenuImgv"
                    android:src="@drawable/ic_menu_me_selector"
                    android:contentDescription="todo" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                tools:ignore="Suspicious0dp">

                <TextView
                    android:id="@+id/tv_bottomMenu_me"
                    style="@style/ButtomMenuTv"
                    android:text="Profile" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>