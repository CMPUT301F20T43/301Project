<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.demo.login.ui.activity.AssessMsgActivity" >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/iv_my"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@drawable/my_fill"/>
        <TextView
            android:id="@+id/tv_ass"
            android:layout_toRightOf="@+id/iv_my"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:text="Assessment"
            android:layout_marginRight="@dimen/text20"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="30dp"/>
        <TextView
            android:id="@+id/tv_next"
            android:layout_toRightOf="@id/tv_ass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_gravity="center"
            android:layout_alignParentRight="true"
            android:text="Next >"
            android:textSize="@dimen/text20"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_know"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    <Spinner
        android:id="@+id/spinner_strand"
        android:layout_width="fill_parent"
        android:autofillHints="GRADE"
        android:layout_height="40dip"></Spinner>
    <Spinner
        android:id="@+id/spinner_grade"
        android:layout_width="fill_parent"
        android:autofillHints="GRADE"
        android:layout_height="40dip"></Spinner>
    <Spinner
        android:id="@+id/spinner_topic"
        android:layout_width="fill_parent"
        android:autofillHints="TOPIC"
        android:layout_height="40dip"></Spinner>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="left"
            android:text="Topic"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="left"
            android:text="Grade"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="left"
            android:text="Name"/>
    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_dash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone" >
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_marginTop="@dimen/text10"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/image_view"
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/my_fill"

                />
            <TextView android:id="@+id/tv_text_id"
                android:layout_toRightOf="@+id/image_view"
                android:layout_width="80dip"
                android:layout_height="40dip"
                android:gravity="center_vertical|right"
                android:layout_marginRight="5dip"
                android:layout_marginTop="5dip"
                android:layout_marginBottom="5dip"
                android:textSize="16sp"
                android:text="ID："
                android:visibility="gone"/>
            <TextView android:id="@+id/tv_id"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:text="未分配"
                android:layout_toRightOf="@id/tv_text_id"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/tv_text_id"
                android:gravity="center"
                android:background="#ffffff"
                android:textColor="#000000"
                android:textSize="16sp"
                android:visibility="gone"/>
            <TextView android:id="@+id/tv_name"
                android:layout_width="80dip"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:layout_marginRight="5dip"
                android:layout_toRightOf="@+id/image_view"
                android:layout_below="@id/tv_text_id"
                android:layout_alignLeft="@id/tv_text_id"
                android:layout_marginBottom="5dip"
                android:textSize="16sp"
                android:text="name："      />
            <TextView android:id="@+id/et_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_name"
                android:layout_alignTop="@id/tv_name"
                android:hint="Bob"
                android:gravity="center|left"
                android:inputType="textPersonName"
                android:paddingLeft="20dip"/>
            <TextView android:id="@+id/tv_price"
                android:layout_width="80dip"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:layout_marginRight="5dip"
                android:layout_toRightOf="@+id/image_view"
                android:layout_below="@id/tv_name"
                android:layout_alignLeft="@id/tv_name"
                android:layout_marginBottom="5dip"
                android:textSize="16sp"
                android:text="Class："      />
            <TextView android:id="@+id/et_topic"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_price"
                android:layout_alignTop="@id/tv_price"
                android:hint="Compare"
                android:inputType="number|phone"
                android:paddingLeft="20dip"/>
            <TextView android:id="@+id/tv_grade"
                android:layout_width="80dip"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:layout_marginRight="5dip"
                android:layout_toRightOf="@+id/image_view"
                android:layout_below="@id/tv_price"
                android:layout_alignLeft="@id/tv_price"
                android:layout_marginBottom="5dip"
                android:textSize="16sp"
                android:text="Cohort："      />
            <TextView android:id="@+id/et_grade"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_grade"
                android:layout_alignTop="@id/tv_grade"
                android:hint="Compare"
                android:inputType="number|phone"
                android:paddingLeft="20dip"/>

            <TextView android:id="@+id/tv_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:layout_marginLeft="15dip"

                android:layout_marginRight="5dip"
                android:layout_toRightOf="@+id/image_view"
                android:layout_below="@id/tv_grade"
                android:layout_alignLeft="@id/tv_grade"
                android:layout_marginBottom="5dip"
                android:textSize="16sp"
                android:text="Learning Assigned："      />
            <TextView android:id="@+id/et_level"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_toRightOf="@id/tv_level"
                android:layout_alignTop="@id/tv_level"
                android:hint="3"
                android:inputType="number|phone"
                android:textSize="@dimen/text15"
                android:paddingLeft="20dip"/>
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:background="@color/gray" />
    </LinearLayout>
    <ListView
        android:id="@+id/list"
        android:layout_below="@+id/ll_title"
        
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>
    
</LinearLayout>
