<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/add_a_gear"
            android:layout_width="160dp"
            android:layout_height="55dp"
            android:layout_marginLeft="120dp"
            android:text="ADD A GEAR"
            android:textColor="#7A58B8"
            android:textStyle="normal|bold"
            tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded" />

    </LinearLayout>


    <ListView
        android:id="@+id/gear_list"
        android:layout_width="match_parent"
        android:layout_height="531dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#572E9F"
            android:gravity="center"
            android:text="Total C$"
            android:textColor=

                "#D78BE4"
            android:textSize="25dp"
            android:textStyle="normal|bold"
            tools:ignore="HardcodedText,SpUsage" />

        <TextView
            android:id="@+id/total_price"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#B9A3E1"
            android:gravity="center"
            android:text="0.00"
            android:textSize="45dp"
            android:textStyle="italic"
            tools:ignore="HardcodedText,SpUsage" />

    </LinearLayout>




</LinearLayout>